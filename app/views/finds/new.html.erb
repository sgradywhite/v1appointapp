<h1>New find</h1>
<div class ="row">
 <%= form_for @find, html: { class: 'form-horizontal' } do |f| %>
    <% if @find.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@find.errors.count, "error") %> prohibited this find from being saved:</h2>
  
        <ul>
        <% @find.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    
    <div class="control-group">
      <%= f.label :role, class: 'control-label' %><br>
      <div class="controls">
        <%= f.collection_select :role, User.where(:role => "doctor"), :role, :role, prompt: 'Choose Doctor ' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
<%= link_to 'Back', finds_path %>
</div>