<div class="row">
  <h1>Listing appointments</h1>
  <div class="pull-right range-query">
    <%= form_tag finds_path, method: :get do %>
     <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>

     
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>First Name</th>
          <th>Role</th>
         
         
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.date.strftime("%Y-%m-%d - %H-%M") %></td>
            <td><%= appointment.firstname %></td>
            <td><%= appointment.lastname %></td>
            <td><%= appointment.role %></td>
        
            
            <td><%= link_to 'Show', appointment, class: 'btn btn-mini' %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Appointment', new_appointment_path %>
